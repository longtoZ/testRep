<GridTest>

    nameInput: name
    emailInput: email
    button: btn

    GridLayout:
        cols: 1
        rows: 2
        size: root.width, root.height

        GridLayout:
            cols: 2
            rows: 2

            Label:
                text: "Name: "
            TextInput:
                id: name
                multiline: False

            Label:
                text: "Email: "
            TextInput:
                id: email
                multiline: False


        Button:
            id: btn
            text: "Submit"
            on_press: root.bttn()